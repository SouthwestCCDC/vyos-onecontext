# NAT gateway configuration
# Multi-interface NAT gateway with DHCP server

# Identity
HOSTNAME="nat-gateway"

# Operational mode
ONECONTEXT_MODE="stateless"

# External interface (eth0) - connects to internet
ETH0_IP="203.0.113.10"
ETH0_MASK="255.255.255.0"
ETH0_GATEWAY="203.0.113.1"
ETH0_DNS="8.8.8.8"

# Internal interface (eth1) - private network
ETH1_IP="10.0.1.1"
ETH1_MASK="255.255.255.0"

# Static routes
ROUTES_JSON='{"static": [{"interface": "eth0", "destination": "10.100.0.0/16", "gateway": "203.0.113.5", "distance": 10}]}'

# NAT configuration:
# - Source NAT (masquerade) for outbound traffic from internal network
# - Destination NAT for SSH port forwarding to internal server
NAT_JSON='{"source": [{"outbound_interface": "eth0", "source_address": "10.0.1.0/24", "translation": "masquerade", "description": "Masquerade internal network"}], "destination": [{"inbound_interface": "eth0", "protocol": "tcp", "destination_port": 2222, "translation_address": "10.0.1.100", "translation_port": 22, "description": "SSH to internal server"}]}'

# DHCP server on internal interface
DHCP_JSON='{"pools": [{"interface": "eth1", "subnet": "10.0.1.0/24", "range_start": "10.0.1.100", "range_end": "10.0.1.200", "gateway": "10.0.1.1", "dns": ["10.0.1.1", "8.8.8.8"], "lease_time": 3600, "domain": "internal.local"}], "reservations": [{"interface": "eth1", "mac": "00:11:22:33:44:55", "ip": "10.0.1.50", "hostname": "reserved-host"}]}'
